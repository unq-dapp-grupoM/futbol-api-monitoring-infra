{
  "title": "Scraper Service",
  "tags": ["scraper", "production"],
  "timezone": "browser",
  "panels": [
    {
      "title": "CPU Usage",
      "type": "timeseries",
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "targets": [{
        "expr": "process_cpu_usage{job=\"scraper-service-render\"}",
        "legendFormat": "CPU"
      }]
    },
    {
      "title": "Service Status",
      "type": "stat",
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8},
      "targets": [{
        "expr": "up{job=\"scraper-service-render\"}",
        "instant": true
      }]
    }
  ]
}